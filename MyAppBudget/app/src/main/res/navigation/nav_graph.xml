<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.myappbudget.ui.DashboardFragment"
        android:label="Přehled"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_dashboard_to_addEdit"
            app:destination="@id/addEditTransactionFragment" />
    </fragment>

    <fragment
        android:id="@+id/transactionListFragment"
        android:name="com.example.myappbudget.ui.TransactionListFragment"
        android:label="Transakce"
        tools:layout="@layout/fragment_transaction_list">

        <action
            android:id="@+id/action_list_to_addEdit"
            app:destination="@id/addEditTransactionFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditTransactionFragment"
        android:name="com.example.myappbudget.ui.AddEditTransactionFragment"
        android:label="Transakce"
        tools:layout="@layout/fragment_add_edit_transaction">

        <argument
            android:name="transactionId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.myappbudget.ui.SettingsFragment"
        android:label="Nastavení"
        tools:layout="@layout/fragment_settings" />

</navigation>