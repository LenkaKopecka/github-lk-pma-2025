<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvOrderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jaké kolo si chceš objednat?"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <RadioGroup
        android:id="@+id/rgBikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbBike1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OIZ M10"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbBike2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OIZ M20" />

        <RadioButton
            android:id="@+id/rbBike3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OIZ M30" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/cbFork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lepší vidlice" />

    <CheckBox
        android:id="@+id/cbSaddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lepší sedlo" />

    <CheckBox
        android:id="@+id/cbHandleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="karbonová říditka" />

    <TextView
        android:id="@+id/tvOrder"
        android:layout_width="367dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/system_inverse_primary_light"
        android:padding="10dp"
        android:text="Souhrn objednávky:" />

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OBJEDNAT KOLO"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="409dp" />

    <ImageView
        android:id="@+id/ivBike"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/bike"
        android:scaleType="centerInside"/>

</LinearLayout>